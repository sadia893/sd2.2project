<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_in"
    android:background="@color/frc"
    android:orientation="vertical"
    android:weightSum="3">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/sign_in_view"
            android:clickable="true"
            android:contextClickable="false"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/frc"
                android:clickable="false">


                <ImageView
                    android:background="@drawable/place_background"
                    android:src="@drawable/emergency_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <EditText
        android:id="@+id/email_id"
        android:layout_margin="35dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:ems="10"
        android:hint="   Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_id"
        android:layout_margin="35dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:layout_weight="0.5"
        android:hint="Password"
        android:inputType="textPassword" /><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/login_id"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="30dp"
        android:background="@color/fc"
        android:clickable="true"
        android:text="log In"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/fp_id"
        android:layout_width="224dp"
        android:layout_height="32dp"
        android:layout_marginLeft="50dp"
        android:background="@color/fc"
        android:clickable="true"
        android:text="  Forget password ?  "
        android:textColor="@color/white" />
</LinearLayout><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight=".2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"

        android:clickable="false"
        android:text=" New here ?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20dp" />

    <Button
        android:id="@+id/signup_id"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="30dp"
        android:background="@color/fc"
        android:clickable="true"
        android:text="Sign Up"
        android:textColor="@color/white" />
</LinearLayout>


</LinearLayout>