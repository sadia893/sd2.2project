<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up"
    android:weightSum="4"
    android:orientation="vertical"
    android:background="@color/frc">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">
    <androidx.cardview.widget.CardView
        android:id="@+id/sign_in_view"
        android:layout_width="0dp"

        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight=".1"
        android:clickable="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/frc">


            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/place_background"
                android:padding="10dp"
                android:src="@drawable/emergency_icon" />


        </LinearLayout>


    </androidx.cardview.widget.CardView></LinearLayout>


    <EditText
        android:id="@+id/email_id"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:ems="10"
        android:hint="   email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_id"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:ems="10"
        android:hint="   password"
        android:inputType="textEmailAddress" />
    <Button
        android:id="@+id/signu_id"
        android:layout_width="100dp"
        android:background="@color/fc"
        android:textColor="@color/white"
        android:layout_height="0dp"
        android:text="Sign Up"
        android:layout_weight=".5"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginTop="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:clickable="false"
            android:text="  already have an account?"
            android:textSize="20dp" />
        <Button
            android:id="@+id/signi_id"
            android:layout_width="wrap_content"
            android:background="@color/fc"
            android:textColor="@color/white"
            android:layout_height="50dp"
            android:text="Sign In"
            android:layout_gravity="center"
            android:clickable="true"/>
    </LinearLayout>


   </LinearLayout>

