<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:background="@color/frc"
    tools:context=".MainActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:gravity="center"
        android:padding="10dp"
        android:text=" Select a Division "
        android:textAlignment="gravity"
        android:textColor="#800000"
        android:textSize="29dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/Dhaka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:text="Dhaka"
        android:gravity="center"
        android:textColor="	#000000"
        android:textAlignment="gravity"
        android:textSize="15dp"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/Rajshahi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="15sp"
        android:text="Rajshahi"
        android:gravity="center"
        android:textColor="	#000000"
        android:textAlignment="gravity"
        android:textSize="15dp"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/Khulna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="15sp"
        android:text="Khulna"
        android:gravity="center"
        android:textColor="	#000000"
        android:textAlignment="gravity"
        android:textSize="15dp"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/Chittagong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="15sp"
        android:text="Chittagong"
        android:gravity="center"
        android:textColor="	#000000"
        android:textAlignment="gravity"
        android:textSize="15dp"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/Sylhet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="15sp"
        android:text="Sylhet"
        android:gravity="center"
        android:textColor="	#000000"
        android:textAlignment="gravity"
        android:textSize="15dp"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/Borishal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="15sp"
        android:text="Barisal"
        android:gravity="center"
        android:textColor="	#000000"
        android:textAlignment="gravity"
        android:textSize="15dp"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/Rangpur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="15sp"
        android:text="Rangpur"
        android:gravity="center"
        android:textColor="	#000000"
        android:textAlignment="gravity"
        android:textSize="15dp"
        android:textStyle="italic"
        />



    <Button
        android:id="@+id/Mymensing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="15sp"
        android:text="Mymensing"
        android:gravity="center"
        android:textColor="	#000000"
        android:textAlignment="gravity"
        android:textSize="15dp"
        android:textStyle="italic"
        />

</LinearLayout>

    </ScrollView>
</LinearLayout>